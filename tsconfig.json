{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "reflect-metadata",
            "jest"
        ],
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src/",
        "paths": {
            "@dtos/*": [
                "adapters/dtos/*"
            ],
            "@mappers/*": [
                "adapters/mappers/*"
            ],
            "@models/*": [
                "adapters/models/*"
            ],
            "@controllers/*": [
                "adapters/inbound/controllers/*"
            ],
            "@integrations/*": [
                "adapters/outbound/integration/*"
            ],
            "@application/*": [
                "application/*"
            ],
            "@routes/*": [
                "application/routes/*"
            ],
            "@services/*": [
                "application/service/*"
            ],
            "@ports/*": [
                "ports/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}